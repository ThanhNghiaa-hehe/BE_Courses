            "url": "{{baseUrl}}/api/lessons/{{lessonId}}/next"
          }
        },
        {
          "name": "Check Lesson Access",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/lessons/{{lessonId}}/access"
          }
        }
      ]
    },
    {
