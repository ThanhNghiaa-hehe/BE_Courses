{
  "info": {
    "name": "Complete E-Learning API Collection",
    "description": "Full API collection for E-Learning Platform - Frontend Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "e-learning-complete-collection"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "courseId",
      "value": "",
      "type": "string"
    },
    {
      "key": "chapterId",
      "value": "",
      "type": "string"
    },
    {
      "key": "lessonId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. AUTHENTICATION",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    console.log('✅ Registered:', data.data.email);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"Password123\",\n  \"fullName\": \"Nguyễn Văn A\",\n  \"phoneNumber\": \"0123456789\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login (User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    pm.collectionVariables.set('userToken', data.data.accessToken);",
                  "    console.log('✅ Logged in as:', data.data.user.email);",
                  "    console.log('Token:', data.data.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Login (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', data.data.accessToken);",
                  "    console.log('✅ Admin logged in');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/forgot-password"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"token\": \"reset-token-from-email\",\n  \"newPassword\": \"NewPassword123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/reset-password"
          }
        }
      ]
    },
    {
      "name": "2. COURSES (Public)",
      "item": [
        {
          "name": "Get All Courses",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    if (data.data && data.data.length > 0) {",
                  "        pm.collectionVariables.set('courseId', data.data[0].id);",
                  "        console.log('✅ Found', data.data.length, 'courses');",
                  "        console.log('Selected courseId:', data.data[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/courses?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "courses"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "categoryCode",
                  "value": "PROGRAM",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Course Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/courses/{{courseId}}"
          }
        },
        {
          "name": "Preview Curriculum - Chapters",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    if (data.data && data.data.length > 0) {",
                  "        pm.collectionVariables.set('chapterId', data.data[0].id);",
                  "        console.log('✅ Found', data.data.length, 'chapters');",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/curriculum/course/{{courseId}}/chapters"
          }
        },
        {
          "name": "Preview Curriculum - Lessons",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const data = pm.response.json();",
                  "    if (data.data && data.data.length > 0) {",
                  "        pm.collectionVariables.set('lessonId', data.data[0].id);",
                  "        console.log('✅ Found', data.data.length, 'lessons');",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/curriculum/chapters/{{chapterId}}/lessons"
          }
        }
      ]
    },
    {
      "name": "3. MY COURSES",
      "item": [
        {
          "name": "Enroll Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
